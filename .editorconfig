# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 8
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[requirements.txt]
insert_final_newline = false

[*.py]
indent_style = space
indent_size = 4

[*.rst]
indent_style = space
indent_size = 3
